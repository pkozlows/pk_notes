	journal = {Physical Review B},
	author = {Guzzo, Matteo and Kas, Joshua J. and Sponza, Lorenzo and Giorgetti, Christine and Sottile, Francesco and Pierucci, Debora and Silly, Mathieu G. and Sirotti, Fausto and Rehr, John J. and Reining, Lucia},
