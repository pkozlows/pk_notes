	author = {Guzzo, Matteo and Lani, Giovanna and Sottile, Francesco and Romaniello, Pina and Gatti, Matteo and Kas, Joshua J. and Rehr, John J. and Silly, Mathieu G. and Sirotti, Fausto and Reining, Lucia},
