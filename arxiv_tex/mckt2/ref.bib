@article{Tokuyama1976TCL,
    author = {Tokuyama, Michio and Mori, Hazime},
    title = {Statistical-Mechanical Theory of the Boltzmann Equation and Fluctuations in µ Space},
    journal = {Progress of Theoretical Physics},
