@article{Dan2022kernel_faster,
    author = {Dan, Xiaohan and Xu, Meng and Yan, Yaming and Shi, Qiang},
    title = {Generalized master equation for charge transport in a molecular junction: Exact memory kernels and their high order expansion},
    journal = {The Journal of Chemical Physics},
